# Copy this to .env and fill in your actual values
# Or set these as environment variables in Railway

# Twilio WhatsApp Configuration
# Get these from https://console.twilio.com
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# Google Sheets Configuration  
# Create a service account at https://console.cloud.google.com/
GOOGLE_PROJECT_ID=your_google_project_id
GOOGLE_PRIVATE_KEY_ID=your_private_key_id
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_content_here\n-----END PRIVATE KEY-----\n"
GOOGLE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_SHEET_ID=your_google_spreadsheet_id

# Bot Configuration
# Phone number of the admin (with country code, e.g. +1234567890)
ADMIN_PHONE=+1234567890

# App Configuration
DEBUG=False
PORT=5000
